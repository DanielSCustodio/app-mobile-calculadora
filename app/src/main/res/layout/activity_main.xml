<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    //Criação dos componentes da calacualdora

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="#778899"
        android:gravity="center|right"
        android:textColor="#ADD8E6"
        android:textSize="65sp" />

    <LinearLayout
        android:background="#B0C4DE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btSair"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OFF"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#B22222"
            android:textColor="#b0c4de"/>



        <Button
            android:id="@+id/btDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DEL"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#4682B4"
            android:textColor="#b0c4de"/>

        <Button
            android:id="@+id/btLimpar"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#4682B4"
            android:textColor="#b0c4de"/>
        <Button
            android:id="@+id/btDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="45sp"
            android:layout_margin="2dp"
            android:background="#00BFFF"
            />




    </LinearLayout>

    <LinearLayout
        android:background="#B0C4DE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"
            />
        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/btMult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="45sp"
            android:layout_margin="2dp"
            android:background="#00BFFF"/>


    </LinearLayout>

    <LinearLayout
        android:background="#B0C4DE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/btSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="45sp"
            android:layout_margin="2dp"
            android:background="#00BFFF"/>


    </LinearLayout>

    <LinearLayout
        android:background="#B0C4DE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/btAdic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="45sp"
            android:layout_margin="2dp"
            android:background="#00BFFF"/>


    </LinearLayout>

    <LinearLayout
        android:background="#B0C4DE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="00"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>

        <Button
            android:id="@+id/btPonto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#87CEEB"/>
        <Button
            android:id="@+id/btIgual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:background="#4682b4"/>


    </LinearLayout>


</LinearLayout>